<% provide :title, t("categories.index.all_categories") %>

<div class="container-fluid header-block">
  <h1 class="text-capitalize">
    <%= t "categories.index.all_categories" %>
  </h1>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <%= render "categories/sidebar", categories: @categories%>
    </div>
    <div class="col-sm-9 tab-style-1-content">
      <div class="row">
        <div class="col-sm-12">
          <div class="row category-header">
            <div class="col-sm-9">
              <h2><%= t "categories.show.collection" %></h2>
            </div>
            <div class="col-sm-3">
              <%= form_with url: categories_path, method: :get,
                local: true, id: "form" do |f| %>
                <%= f.select :sort, books_sort_params,
                  {selected: params[:sort]}, {class: "form-control", id: "sort"} %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <% @books.each do |book| %>
          <%= render "categories/book", book: book %>
        <% end %>
      </div>
      <div class="row">
        <div class="col-sm-9">
          <hr>
          <%= paginate @books, theme: "twitter-bootstrap-3" %>
        </div>
      </div>
    </div>
  </div>
</div>
