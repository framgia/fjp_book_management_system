<div class="list-group">
  <% if books.count > 0 %>
    <a href="#" class="list-group-item btn-block active">
      <h4 class="list-group-item-heading text-center text-uppercase">
        <%= t "layouts.header.books_suggestions" %>
      </h4>
    </a>
    <% books.each do |book| %>
      <%= link_to book, class: "list-group-item btn-block", "data-turbolinks": false do %>
        <h4 class="list-group-item-heading"><%= book.title %></h4>
        <p class="list-group-item-text">
          <%= time_ago_in_words book.created_at %>
        </p>
      <% end %>
    <% end %>
  <% end %>
  <% if tags.count > 0 %>
    <a href="#" class="list-group-item btn-block active">
      <h4 class="list-group-item-heading text-center text-uppercase">
        <%= t "layouts.header.tag_suggestions" %>
      </h4>
    </a>
    <div class="col-sm-12 tags">
      <% tags.each do |tag| %>
        <%= link_to tag, "data-turbolinks": false do %>
          <div class="pmd-chip pmd-chip-no-icon">
            <%= tag.title %>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>


