<div class="row book-index">
  <div class="col-xs-10 col-sm-8 col-md-10 col-lg-10 col-xs-offset-1 col-sm-offset-1
    col-md-offset-1 col-lg-offset-1">
    <div class="col-sm-10 col-xs-12 col-md-12 col-lg-3 index-list-book" id="sidebar">
      <%= render "sidebar", categories: @categories,
        authors: @authors, publishers: @publishers %>
    </div>
    <div class="col-sm-10 col-xs-12 col-md-12 col-lg-9 index-list-book" id="books">
      <%= render "book_index", books: @books %>
    </div>
  </div>
</div>
