<div class="div-signin">
  <div class="loginbox mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info">
      <div class="panel-heading">
        <div class="panel-title"><h1><%= t "passwords.new.title" %></h1></div>
      </div>
      <div class="panel-body" >
        <%= form_for resource, as: resource_name,
          url: password_path(resource_name),
          html: {class: "form-horizontal", role: "form"} do |f| %>

          <div class="input-group">
            <span class="input-group-addon">
              <i class="glyphicon glyphicon-user"></i>
            </span>
            <%= f.email_field :email, class: "form-control",
              placeholder: t("passwords.new.email_field") %>
          </div>
          <br>
          <div class="form-group">
            <div class="col-sm-12 controls">
              <%= f.submit t("passwords.new.send_mail"),
                class: "btn btn-lg btn-primary btn-block" %>
            </div>
          </div>
        <% end %>
        <hr>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
