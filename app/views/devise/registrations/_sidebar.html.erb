<div class="col-lg-3">
  <div data-provides="fileinput" class="fileinput fileinput-new">
    <div data-trigger="fileinput" class="fileinput-preview thumbnail
      img-circle img-responsive">
      <%= image_tag user.avatar.thumb.url, id: "avatar" %>
      <div class="action-button">
        <%= form_for user, url: user_registration_path, multipart: true,
          remote: true, method: :patch do |f| %>
          <% if user.errors.any? %>
            <% user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          <% end %>
          <span class="btn btn-default btn-raised btn-file ripple-effect">
            <span class="fileinput-new">
              <i class="material-icons md-light pmd-xs">add</i></span>
            <span class="fileinput-exists">
              <i class="material-icons md-light pmd-xs">mode_edit</i></span>
            <%= f.file_field :avatar, class: "upload-avatar" %>
          </span>
        <% end %>
        <a data-dismiss="fileinput" class="btn btn-default btn-raised btn-file
          ripple-effect fileinput-exists" href="javascript:void(0);">
          <i class="material-icons md-light pmd-xs">close</i>
        </a>
      </div>
    </div>
  </div>
  <div class="menu-portfolio-item">
    <ul class="portfolio">
      <li class="filter active" data-trigger=".info-part">
        <%= link_to t("user.edit.menu_item.information"),
        user, "data-turbolinks":"false" %></li>
      <li class="filter" data-trigger=".blog-part">
        <%= link_to t("user.edit.menu_item.blog"),
        user_path(user, type: "blog"), remote: true,
        "data-turbolinks":"false" %></li>
      <li class="filter" data-trigger=".fav-book-part">
        <%= link_to t("user.edit.menu_item.favorite_books"),
        user_path(user, type: "book_mark"), remote: true,
        "data-turbolinks":"false" %></li>

      <li class="filter" data-trigger=".history-part" id="history-btn">
        <%= link_to t("user.edit.menu_item.history"),
          user_path(user, type: "borrow"), remote: true,
          "data-turbolinks":"false" %>
      </li>
      <li class="dropdown-item active-child" data-trigger=".borrow-part">
        <span><%= link_to t("user.edit.menu_item.borrow"),
          user_path(user, type: "borrow"), remote: true,
          "data-turbolinks":"false" %></span>
      </li>
      <li class="dropdown-item" data-trigger=".donate-part">
        <span><%= t "user.edit.menu_item.purchase" %></span>
      </li>
      <li class="dropdown-item" data-trigger=".feedback-part">
        <span><%= t "user.edit.menu_item.donate" %></span>
      </li>
    </ul>
  </div>
</div>
