<div class="modal-content request-form">
  <div class="modal-header text-center">
    <button type="button" class="close text-right" data-dismiss="modal">&times;</button>
    <h1 class="modal-title">
      <%= t "requests.index.request_title" %>
    </h1>
  </div><hr>
  <div class="pmd-card pmd-card-custom-form col-xs-12">
    <div class="pmd-card-body">
      <div class="col-xs-10 col-xs-offset-1">
        <%= form_for request do |f| %>
          <%= f.label :link, t("requests.request.link") %>
          <%= f.text_field :link, class: "form-control link feedback-input",
            id: "text-field-request-link"%>
          <%= f.label :content, t("requests.request.message") %>
          <%= f.text_area :content, class: "form-control content feedback-input",
            id: "text-field-request-content",
            placeholder: t("requests.index.content_placeholder") %>
          <%= f.label :request_type %>
          <%= f.select :request_type, support.load_types,
            {include_blank: t("requests.request.choose_type")},
            {class: "form-control type", id: "request-type"} %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <div class="col-xs-10 col-xs-offset-1 row">
      <button type="button" class="btn btn-success create-request form-control"
        data-dismiss="modal" id="button-blue">
        <%= t "requests.index.create" %>
      </button>
      <div class="ease"></div>
    </div>
  </div>
</div>
